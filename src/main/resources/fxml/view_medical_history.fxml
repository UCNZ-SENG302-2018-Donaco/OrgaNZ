<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.Controller.Client.ClientMedicalHistoryController">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
    <HBox fx:id="menuBarPane" maxHeight="20.0" maxWidth="200.0" minHeight="-Infinity" minWidth="200.0"
          prefWidth="200.0"/>
        <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
            <HBox fx:id="sidebarPane" maxWidth="200.0" minWidth="200.0" prefHeight="530.0" prefWidth="200.0"/>
            <BorderPane>
                <top>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="View/edit medical history" textAlignment="CENTER"
                          BorderPane.alignment="CENTER">
                        <font>
                            <Font size="24.0"/>
                        </font>
                        <BorderPane.margin>
                            <Insets top="50.0"/>
                        </BorderPane.margin>
                    </Text>
                </top>
                <center>
                </center>
                <center>
                    <VBox BorderPane.alignment="CENTER">
                        <HBox fx:id="newIllnessPane" alignment="CENTER_LEFT" spacing="10.0">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="20.0"/>
                            </VBox.margin>
                            <Label maxWidth="1.7976931348623157E308" text="Illness:">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="illnessNameField" onAction="#addIllness" HBox.hgrow="ALWAYS"/>
                            <Label maxWidth="1.7976931348623157E308" text="Diagnosis Date:">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <DatePicker fx:id="dateDiagnosedPicker" prefHeight="25.0" prefWidth="163.0"
                                        HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets/>
                                </HBox.margin>
                            </DatePicker>
                            <CheckBox fx:id="chronicBox" mnemonicParsing="false" text="Chronic">
                                <HBox.margin>
                                    <Insets/>
                                </HBox.margin>
                            </CheckBox>
                            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addIllness"
                                    text="Add Illness"/>
                        </HBox>
                        <Text fx:id="errorMessage" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
                            <VBox.margin>
                                <Insets left="10.0" top="5.0"/>
                            </VBox.margin>
                        </Text>
                        <HBox VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="Past Illnesses">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="pastIllnessView" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="illnessPastCol" prefWidth="75.0"
                                                     text="Illness"/>
                                        <TableColumn fx:id="diagnosisDatePastCol" prefWidth="75.0"
                                                     text="Diagnosis Date"/>
                                        <TableColumn fx:id="curedDatePastCol" prefWidth="75.0"
                                                     text="Cured Date"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </VBox>
                            <VBox spacing="5.0">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="27.0"/>
                                </HBox.margin>
                            </VBox>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="Current Illnesses">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="currentIllnessView" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="illnessCurrCol" prefWidth="75.0"
                                                     text="Illness"/>
                                        <TableColumn fx:id="diagnosisDateCurrCol" prefWidth="75.0"
                                                     text="Diagnosis Date"/>
                                        <TableColumn fx:id="chronicCurrCol" prefWidth="75.0"
                                                     text="Chronic"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </VBox>
                        </HBox>
                    </VBox>
                </center>
                <bottom>
                    <HBox fx:id="illnessButtonsPane" alignment="TOP_CENTER" spacing="10.0"
                          BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0"/>
                        </BorderPane.margin>
                        <Button fx:id="toggleCuredButton" mnemonicParsing="false" onAction="#toggleCured"
                                text="Mark as Cured" textAlignment="CENTER"/>
                        <Button fx:id="toggleChronicButton" alignment="TOP_LEFT" mnemonicParsing="false"
                                onAction="#toggleChronic" text="Mark as Chronic"/>
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteIllness"
                                text="Delete"/>
                    </HBox>
                </bottom>
            </BorderPane>
        </SplitPane>
    </SplitPane>
</VBox>
